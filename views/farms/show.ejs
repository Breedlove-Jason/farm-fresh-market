<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= farm.name %> - Farm Fresh Market</title>
    <!-- Bootstrap 5 CSS (Lux theme from Bootswatch) -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/css/show.css">
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/farms" class="text-white">
                                    <i class="fas fa-home me-1"></i>All Farms
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-white-50" aria-current="page">
                                <%= farm.type.charAt(0).toUpperCase() + farm.type.slice(1) %>
                            </li>
                            <li class="breadcrumb-item active text-white" aria-current="page">
                                <%= farm.name %>
                            </li>
                        </ol>
                    </nav>
                    
                    <div class="category-badge mb-3">
                        <% if(farm.type === 'Dairy') { %>
                            <i class="fas fa-glass-whiskey me-2"></i>Dairy Farm
                        <% } else if(farm.type === 'Vegetable') { %>
                            <i class="fas fa-carrot me-2"></i>Vegetable Farm
                        <% } else if(farm.type === 'Fruit') { %>
                            <i class="fas fa-apple-alt me-2"></i>Fruit Orchard
                        <% } else if(farm.type === 'Livestock') { %>
                            <i class="fas fa-horse me-2"></i>Livestock Farm
                        <% } else { %>
                            <i class="fas fa-seedling me-2"></i>Mixed Farm
                        <% } %>
                    </div>
                    
                    <h1 class="display-3 fw-bold mb-3 product-title">
                        <%= farm.name %>
                    </h1>
                    
                    <div class="price-section mb-4">
                        <span class="price-label">Farm Location</span>
                        <div class="price-display">
                            <span class="price-amount"><%= farm.location %></span>
                        </div>
                        <small class="price-note">Fresh Local Produce â€¢ Quality Guaranteed</small>
                    </div>
                </div>
                
                <div class="col-lg-4 text-center">
                    <div class="product-icon-display">
                        <% if(farm.type === 'Dairy') { %>
                            <i class="fas fa-glass-whiskey product-hero-icon text-info"></i>
                        <% } else if(farm.type === 'Vegetable') { %>
                            <i class="fas fa-carrot product-hero-icon text-warning"></i>
                        <% } else if(farm.type === 'Fruit') { %>
                            <i class="fas fa-apple-alt product-hero-icon text-success"></i>
                        <% } else if(farm.type === 'Livestock') { %>
                            <i class="fas fa-horse product-hero-icon text-danger"></i>
                        <% } else { %>
                            <i class="fas fa-seedling product-hero-icon text-primary"></i>
                        <% } %>
                        <div class="icon-decoration"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <!-- Farm Details Card -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="product-card">
                    <div class="row">
                        <!-- Farm Image/Icon Section -->
                        <div class="col-lg-5">
                            <div class="product-visual-section">
                                <div class="product-image-container">
                                    <% if(farm.type === 'Dairy') { %>
                                        <i class="fas fa-glass-whiskey product-large-icon text-info"></i>
                                        <div class="product-category-text">Dairy Farm</div>
                                    <% } else if(farm.type === 'Vegetable') { %>
                                        <i class="fas fa-carrot product-large-icon text-warning"></i>
                                        <div class="product-category-text">Vegetable Farm</div>
                                    <% } else if(farm.type === 'Fruit') { %>
                                        <i class="fas fa-apple-alt product-large-icon text-success"></i>
                                        <div class="product-category-text">Fruit Orchard</div>
                                    <% } else if(farm.type === 'Livestock') { %>
                                        <i class="fas fa-horse product-large-icon text-danger"></i>
                                        <div class="product-category-text">Livestock Farm</div>
                                    <% } else { %>
                                        <i class="fas fa-seedling product-large-icon text-primary"></i>
                                        <div class="product-category-text">Mixed Farm</div>
                                    <% } %>
                                </div>
                                
                                <!-- Quality Badges -->
                                <div class="quality-badges">
                                    <div class="badge-item">
                                        <i class="fas fa-leaf"></i>
                                        <span>Organic</span>
                                    </div>
                                    <div class="badge-item">
                                        <i class="fas fa-truck"></i>
                                        <span>Local</span>
                                    </div>
                                    <div class="badge-item">
                                        <i class="fas fa-star"></i>
                                        <span>Certified</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Farm Info Section -->
                        <div class="col-lg-7">
                            <div class="product-info-section">
                                <div class="section-header">
                                    <h2 class="section-title">
                                        <i class="fas fa-info-circle me-2"></i>Farm Details
                                    </h2>
                                </div>
                                
                                <div class="product-details">
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-tractor text-primary"></i>
                                            Farm Name
                                        </div>
                                        <div class="detail-value">
                                            <%= farm.name %>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-list text-success"></i>
                                            Farm Type
                                        </div>
                                        <div class="detail-value">
                                            <span class="category-tag category-<%= farm.type.toLowerCase() %>">
                                                <%= farm.type %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-map-marker-alt text-info"></i>
                                            Location
                                        </div>
                                        <div class="detail-value">
                                            <%= farm.location %>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-envelope text-warning"></i>
                                            Contact Email
                                        </div>
                                        <div class="detail-value">
                                            <a href="mailto:<%= farm.email %>" class="text-decoration-none">
                                                <%= farm.email %>
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-calendar text-warning"></i>
                                            Registered
                                        </div>
                                        <div class="detail-value">
                                            <span id="dateAdded">Today</span>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-barcode text-secondary"></i>
                                            Farm ID
                                        </div>
                                        <div class="detail-value">
                                            <code class="product-id">#<%= farm._id.toString().slice(-8).toUpperCase() %></code>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="action-buttons">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <a href="/farms/<%= farm._id %>/products" class="btn btn-edit w-100">
                                                <i class="fas fa-seedling me-2"></i>View Products
                                            </a>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <a href="/farms/<%= farm._id %>/products/new" class="btn btn-add w-100">
                                                <i class="fas fa-plus me-2"></i>Add Product
                                            </a>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <a href="/farms" class="btn btn-back w-100">
                                                <i class="fas fa-arrow-left me-2"></i>All Farms
                                            </a>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <form method="POST" action="/farms/<%= farm._id %>?_method=DELETE" style="display: inline;" class="w-100">
                                                <button type="submit" class="btn btn-delete w-100"
                                                        onclick="return confirm('Are you sure you want to delete <%= farm.name %>? This will also delete all associated products.')">
                                                    <i class="fas fa-trash me-2"></i>Delete Farm
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Additional Info Cards -->
        <div class="row mt-5">
            <div class="col-lg-4 mb-4">
                <div class="info-card">
                    <div class="info-card-header">
                        <i class="fas fa-truck text-primary"></i>
                        <h5>Fresh Delivery</h5>
                    </div>
                    <div class="info-card-body">
                        <p>Direct from farm delivery ensures the freshest produce reaches your table within hours of harvest.</p>
                        <small class="text-muted">Same-day delivery available</small>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 mb-4">
                <div class="info-card">
                    <div class="info-card-header">
                        <i class="fas fa-leaf text-success"></i>
                        <h5>Sustainable Farming</h5>
                    </div>
                    <div class="info-card-body">
                        <p>Our partner farms use sustainable and organic farming practices to protect the environment.</p>
                        <small class="text-muted">Certified organic practices</small>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 mb-4">
                <div class="info-card">
                    <div class="info-card-header">
                        <i class="fas fa-handshake text-warning"></i>
                        <h5>Local Partnership</h5>
                    </div>
                    <div class="info-card-body">
                        <p>Supporting local farmers and communities by connecting them directly with consumers.</p>
                        <small class="text-muted">Building stronger communities</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5><i class="fas fa-seedling me-2"></i>Farm Fresh Market</h5>
                    <p class="text-muted">Your trusted source for fresh, organic produce delivered straight from local farms to your table.</p>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/farms" class="text-muted text-decoration-none">All Farms</a></li>
                        <li><a href="/farms/new" class="text-muted text-decoration-none">Add Farm</a></li>
                        <li><a href="/products" class="text-muted text-decoration-none">All Products</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">About Us</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6>Contact Info</h6>
                    <p class="text-muted mb-1">
                        <i class="fas fa-phone me-2"></i>(555) 123-4567
                    </p>
                    <p class="text-muted mb-1">
                        <i class="fas fa-envelope me-2"></i>hello@farmfresh.com
                    </p>
                    <p class="text-muted">
                        <i class="fas fa-map-marker-alt me-2"></i>Fresh Valley, CA 12345
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Pass farm data to JavaScript -->
    <script>
        window.farmData = {
            id: '<%= farm._id %>',
            name: '<%= farm.name %>',
            type: '<%= farm.type %>',
            location: '<%= farm.location %>',
            email: '<%= farm.email %>'
        };
    </script>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Your custom JavaScript -->
    <script src="/js/show.js"></script>
</body>
</html>