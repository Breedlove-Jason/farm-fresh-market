<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Farm Fresh Market - All Farms</title>
    <!-- Bootstrap 5 CSS (Lux theme from Bootswatch) -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-2 fw-bold mb-3 hero-title">
                        <i class="fas fa-tractor me-3"></i>Farm Fresh Market
                    </h1>
                    <p class="lead hero-subtitle">
                        Discover our network of trusted local farms providing fresh, organic produce directly to your table.
                    </p>
                    <div class="hero-stats">
                        <div class="stat-item">
                            <span class="stat-number" id="farmCount"><%= farms.length %></span>
                            <span class="stat-label">Partner Farms</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">100%</span>
                            <span class="stat-label">Local</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">Daily</span>
                            <span class="stat-label">Fresh Harvest</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="hero-icons">
                        <i class="fas fa-tractor hero-icon fruit-icon"></i>
                        <i class="fas fa-barn hero-icon vegetable-icon"></i>
                        <i class="fas fa-seedling hero-icon dairy-icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation & Actions -->
    <div class="container">
        <div class="actions-bar">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="section-title mb-0">
                        <i class="fas fa-map-marked-alt me-2"></i>
                        Our Partner Farms
                    </h2>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <a href="/farms/new" class="btn btn-add-product">
                        <i class="fas fa-plus me-2"></i>Add New Farm
                    </a>
                </div>
            </div>
            
            <!-- Filter & Search -->
            <div class="row mt-4">
                <div class="col-lg-8">
                    <div class="search-container">
                        <i class="fas fa-search search-icon"></i>
                        <label for="searchInput"></label><input type="text" id="searchInput" class="form-control search-input"
                                                                placeholder="Search farms by name or location...">
                        <button class="btn btn-clear-search" id="clearSearch" style="display: none;">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="col-lg-4">
                    <label for="categoryFilter"></label><select class="form-select filter-select" id="categoryFilter">
                        <option value="all">All Farm Types</option>
                        <option value="Dairy">ü•õ Dairy Farms</option>
                        <option value="Vegetable">ü•ï Vegetable Farms</option>
                        <option value="Fruit">üçé Fruit Orchards</option>
                        <option value="Livestock">üêÑ Livestock Farms</option>
                        <option value="Mixed">üåæ Mixed Farms</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Farms Grid -->
        <div class="products-section">
            <% if (farms.length === 0) { %>
                <!-- Empty State -->
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-tractor"></i>
                    </div>
                    <h3>No Farms Yet</h3>
                    <p class="text-muted">Start building your farm network!</p>
                    <a href="/farms/new" class="btn btn-add-product">
                        <i class="fas fa-plus me-2"></i>Add Your First Farm
                    </a>
                </div>
            <% } else { %>
                <div class="row" id="farmsGrid">
                    <% for(let farm of farms) { %>
                        <div class="col-lg-4 col-md-6 mb-4 product-item" 
                             data-category="<%= farm.type %>" 
                             data-name="<%= farm.name.toLowerCase() %>"
                             data-location="<%= farm.location.toLowerCase() %>">
                            <div class="product-card">
                                <!-- Farm Header -->
                                <div class="product-header">
                                    <div class="category-badge category-<%= farm.type.toLowerCase() %>">
                                        <% if(farm.type === 'Dairy') { %>
                                            <i class="fas fa-glass-whiskey"></i>
                                            <span>Dairy Farm</span>
                                        <% } else if(farm.type === 'Vegetable') { %>
                                            <i class="fas fa-carrot"></i>
                                            <span>Vegetable Farm</span>
                                        <% } else if(farm.type === 'Fruit') { %>
                                            <i class="fas fa-apple-alt"></i>
                                            <span>Fruit Orchard</span>
                                        <% } else if(farm.type === 'Livestock') { %>
                                            <i class="fas fa-horse"></i>
                                            <span>Livestock Farm</span>
                                        <% } else { %>
                                            <i class="fas fa-seedling"></i>
                                            <span>Mixed Farm</span>
                                        <% } %>
                                    </div>
                                    <div class="product-actions">
                                        <div class="dropdown">
                                            <button class="btn btn-action-menu" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="/farms/<%= farm._id %>">
                                                        <i class="fas fa-eye me-2"></i>View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="/farms/<%= farm._id %>/products">
                                                        <i class="fas fa-seedling me-2"></i>View Products
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item" href="mailto:<%= farm.email %>">
                                                        <i class="fas fa-envelope me-2"></i>Contact Farm
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <!-- Farm Icon -->
                                <div class="product-icon-section">
                                    <% if(farm.type === 'Dairy') { %>
                                        <i class="fas fa-glass-whiskey product-icon text-info"></i>
                                    <% } else if(farm.type === 'Vegetable') { %>
                                        <i class="fas fa-carrot product-icon text-warning"></i>
                                    <% } else if(farm.type === 'Fruit') { %>
                                        <i class="fas fa-apple-alt product-icon text-success"></i>
                                    <% } else if(farm.type === 'Livestock') { %>
                                        <i class="fas fa-horse product-icon text-danger"></i>
                                    <% } else { %>
                                        <i class="fas fa-seedling product-icon text-primary"></i>
                                    <% } %>
                                </div>

                                <!-- Farm Info -->
                                <div class="product-info">
                                    <h4 class="product-name">
                                        <a href="/farms/<%= farm._id %>"><%= farm.name %></a>
                                    </h4>
                                    <div class="product-price">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        <span class="price-amount"><%= farm.location %></span>
                                    </div>
                                    <div class="product-meta">
                                        <span class="product-id">ID: #<%= farm._id.toString().slice(-6).toUpperCase() %></span>
                                    </div>
                                </div>

                                <!-- Farm Footer -->
                                <div class="product-footer">
                                    <a href="/farms/<%= farm._id %>" class="btn btn-view-product">
                                        <i class="fas fa-eye me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>

                <!-- No Results Message -->
                <div class="no-results" id="noResults" style="display: none;">
                    <div class="text-center">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4>No farms found</h4>
                        <p class="text-muted">Try adjusting your search or filter criteria.</p>
                        <button class="btn btn-outline-primary" id="clearFilters">
                            <i class="fas fa-refresh me-2"></i>Clear Filters
                        </button>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Summary Stats -->
        <% if (farms.length > 0) { %>
            <div class="summary-section">
                <div class="row">
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                        <div class="summary-card">
                            <div class="summary-icon">
                                <i class="fas fa-glass-whiskey text-info"></i>
                            </div>
                            <div class="summary-info">
                                <h5 id="dairyCount"><%= farms.filter(f => f.type === 'Dairy').length %></h5>
                                <small>Dairy Farms</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                        <div class="summary-card">
                            <div class="summary-icon">
                                <i class="fas fa-carrot text-warning"></i>
                            </div>
                            <div class="summary-info">
                                <h5 id="vegetableCount"><%= farms.filter(f => f.type === 'Vegetable').length %></h5>
                                <small>Vegetable Farms</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                        <div class="summary-card">
                            <div class="summary-icon">
                                <i class="fas fa-apple-alt text-success"></i>
                            </div>
                            <div class="summary-info">
                                <h5 id="fruitCount"><%= farms.filter(f => f.type === 'Fruit').length %></h5>
                                <small>Fruit Orchards</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                        <div class="summary-card">
                            <div class="summary-icon">
                                <i class="fas fa-horse text-danger"></i>
                            </div>
                            <div class="summary-info">
                                <h5 id="livestockCount"><%= farms.filter(f => f.type === 'Livestock').length %></h5>
                                <small>Livestock Farms</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                        <div class="summary-card">
                            <div class="summary-icon">
                                <i class="fas fa-seedling text-primary"></i>
                            </div>
                            <div class="summary-info">
                                <h5 id="mixedCount"><%= farms.filter(f => f.type === 'Mixed').length %></h5>
                                <small>Mixed Farms</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                        <div class="summary-card">
                            <div class="summary-icon">
                                <i class="fas fa-map-marked-alt text-secondary"></i>
                            </div>
                            <div class="summary-info">
                                <h5 id="totalFarms"><%= farms.length %></h5>
                                <small>Total Farms</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5><i class="fas fa-seedling me-2"></i>Farm Fresh Market</h5>
                    <p class="text-muted">Your trusted source for fresh, organic produce delivered straight from local farms to your table.</p>
                    <div class="social-links">
                        <a href="#" class="social-link"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6>Quick Actions</h6>
                    <ul class="list-unstyled">
                        <li><a href="/farms" class="text-muted text-decoration-none">View All Farms</a></li>
                        <li><a href="/farms/new" class="text-muted text-decoration-none">Add New Farm</a></li>
                        <li><a href="/products" class="text-muted text-decoration-none">View All Products</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6>Farm Fresh Promise</h6>
                    <p class="text-muted mb-1">
                        <i class="fas fa-check-circle text-success me-2"></i>100% Local
                    </p>
                    <p class="text-muted mb-1">
                        <i class="fas fa-check-circle text-success me-2"></i>Daily Fresh Harvest
                    </p>
                    <p class="text-muted">
                        <i class="fas fa-check-circle text-success me-2"></i>Sustainable Farming
                    </p>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0">&copy; 2024 Farm Fresh Market. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">Made with <i class="fas fa-heart text-danger"></i> for fresh produce lovers</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Pass farms data to JavaScript -->
    <script>
        window.farmsData = {
            farms: '<%- JSON.stringify(farms) %>',
            totalCount: '<%= farms.length %>',
            types: {
                dairy: '<%= farms.filter(f => f.type === 'Dairy').length %>',
                vegetable: '<%= farms.filter(f => f.type === 'Vegetable').length %>',
                fruit: '<%= farms.filter(f => f.type === 'Fruit').length %>',
                livestock: '<%= farms.filter(f => f.type === 'Livestock').length %>',
                mixed: '<%= farms.filter(f => f.type === 'Mixed').length %>'
            }
        };
    </script>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Your custom JavaScript -->
    <script src="/js/index.js"></script>
</body>
</html>