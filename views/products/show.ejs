<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= product.name %> - Farm Fresh Market</title>
    <!-- Bootstrap 5 CSS (Lux theme from Bootswatch) -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/css/show.css">
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/products" class="text-white">
                                    <i class="fas fa-home me-1"></i>All Products
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-white-50" aria-current="page">
                                <%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %>
                            </li>
                            <li class="breadcrumb-item active text-white" aria-current="page">
                                <%= product.name %>
                            </li>
                        </ol>
                    </nav>
                    
                    <div class="category-badge mb-3">
                        <% if(product.category === 'fruit') { %>
                            <i class="fas fa-apple-alt me-2"></i>Fresh Fruit
                        <% } else if(product.category === 'vegetable') { %>
                            <i class="fas fa-carrot me-2"></i>Fresh Vegetable
                        <% } else { %>
                            <i class="fas fa-cheese me-2"></i>Dairy Product
                        <% } %>
                    </div>
                    
                    <h1 class="display-3 fw-bold mb-3 product-title">
                        <%= product.name %>
                    </h1>
                    
                    <div class="price-section mb-4">
                        <span class="price-label">Fresh Daily Price</span>
                        <div class="price-display">
                            $<span class="price-amount"><%= product.price.toFixed(2) %></span>
                        </div>
                        <small class="price-note">Per unit â€¢ Farm Fresh Quality</small>
                    </div>
                </div>
                
                <div class="col-lg-4 text-center">
                    <div class="product-icon-display">
                        <% if(product.category === 'fruit') { %>
                            <i class="fas fa-apple-alt product-hero-icon text-success"></i>
                        <% } else if(product.category === 'vegetable') { %>
                            <i class="fas fa-carrot product-hero-icon text-warning"></i>
                        <% } else { %>
                            <i class="fas fa-cheese product-hero-icon text-info"></i>
                        <% } %>
                        <div class="icon-decoration"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <!-- Product Details Card -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="product-card">
                    <div class="row">
                        <!-- Product Image/Icon Section -->
                        <div class="col-lg-5">
                            <div class="product-visual-section">
                                <div class="product-image-container">
                                    <% if(product.category === 'fruit') { %>
                                        <i class="fas fa-apple-alt product-large-icon text-success"></i>
                                        <div class="product-category-text">Premium Fruit</div>
                                    <% } else if(product.category === 'vegetable') { %>
                                        <i class="fas fa-carrot product-large-icon text-warning"></i>
                                        <div class="product-category-text">Fresh Vegetable</div>
                                    <% } else { %>
                                        <i class="fas fa-cheese product-large-icon text-info"></i>
                                        <div class="product-category-text">Dairy Product</div>
                                    <% } %>
                                </div>
                                
                                <!-- Quality Badges -->
                                <div class="quality-badges">
                                    <div class="badge-item">
                                        <i class="fas fa-leaf"></i>
                                        <span>Organic</span>
                                    </div>
                                    <div class="badge-item">
                                        <i class="fas fa-truck"></i>
                                        <span>Fresh Daily</span>
                                    </div>
                                    <div class="badge-item">
                                        <i class="fas fa-star"></i>
                                        <span>Premium</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Product Info Section -->
                        <div class="col-lg-7">
                            <div class="product-info-section">
                                <div class="section-header">
                                    <h2 class="section-title">
                                        <i class="fas fa-info-circle me-2"></i>Product Details
                                    </h2>
                                </div>
                                
                                <div class="product-details">
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-tag text-primary"></i>
                                            Product Name
                                        </div>
                                        <div class="detail-value">
                                            <%= product.name %>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-dollar-sign text-success"></i>
                                            Current Price
                                        </div>
                                        <div class="detail-value price-highlight">
                                            $<%= product.price.toFixed(2) %>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-list text-info"></i>
                                            Category
                                        </div>
                                        <div class="detail-value">
                                            <span class="category-tag category-<%= product.category %>">
                                                <%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-calendar text-warning"></i>
                                            Added
                                        </div>
                                        <div class="detail-value">
                                            <span id="dateAdded">Today</span>
                                        </div>
                                    </div>
                                    
                                    <div class="detail-row">
                                        <div class="detail-label">
                                            <i class="fas fa-barcode text-secondary"></i>
                                            Product ID
                                        </div>
                                        <div class="detail-value">
                                            <code class="product-id">#<%= product._id.toString().slice(-8).toUpperCase() %></code>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="action-buttons">
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <a href="/products/<%= product._id %>/edit" class="btn btn-edit w-100">
                                                <i class="fas fa-edit me-2"></i>Edit Product
                                            </a>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <button class="btn btn-delete w-100" data-product-id="<%= product._id %>" data-product-name="<%= product.name %>">
                                                <i class="fas fa-trash me-2"></i>Delete Product
                                            </button>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <a href="/products" class="btn btn-back w-100">
                                                <i class="fas fa-arrow-left me-2"></i>All Products
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Additional Info Cards -->
        <div class="row mt-5">
            <div class="col-lg-4 mb-4">
                <div class="info-card">
                    <div class="info-card-header">
                        <i class="fas fa-truck text-primary"></i>
                        <h5>Delivery Info</h5>
                    </div>
                    <div class="info-card-body">
                        <p>Fresh delivery daily from our local farms. Order before 2 PM for same-day delivery.</p>
                        <small class="text-muted">Free delivery on orders over $25</small>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 mb-4">
                <div class="info-card">
                    <div class="info-card-header">
                        <i class="fas fa-leaf text-success"></i>
                        <h5>Quality Promise</h5>
                    </div>
                    <div class="info-card-body">
                        <p>100% organic, locally sourced produce. If you're not satisfied, we'll replace it for free.</p>
                        <small class="text-muted">Satisfaction guaranteed</small>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 mb-4">
                <div class="info-card">
                    <div class="info-card-header">
                        <i class="fas fa-star text-warning"></i>
                        <h5>Farm Fresh</h5>
                    </div>
                    <div class="info-card-body">
                        <p>Picked fresh daily from our partner farms within 50 miles of your location.</p>
                        <small class="text-muted">Supporting local agriculture</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5><i class="fas fa-seedling me-2"></i>Farm Fresh Market</h5>
                    <p class="text-muted">Your trusted source for fresh, organic produce delivered straight from local farms to your table.</p>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/products" class="text-muted text-decoration-none">All Products</a></li>
                        <li><a href="/products/new" class="text-muted text-decoration-none">Add Product</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">About Us</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6>Contact Info</h6>
                    <p class="text-muted mb-1">
                        <i class="fas fa-phone me-2"></i>(555) 123-4567
                    </p>
                    <p class="text-muted mb-1">
                        <i class="fas fa-envelope me-2"></i>hello@farmfresh.com
                    </p>
                    <p class="text-muted">
                        <i class="fas fa-map-marker-alt me-2"></i>Fresh Valley, CA 12345
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                        Confirm Deletion
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="productNameToDelete"></strong>?</p>
                    <p class="text-muted mb-0">This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Product
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Pass product data to JavaScript -->
    <script>
        window.productData = {
            id: '<%= product._id %>',
            name: '<%= product.name %>',
            price: '<%= product.price %>',
            category: '<%= product.category %>'
        };
    </script>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Your custom JavaScript -->
    <script src="/js/show.js"></script>
</body>
</html>