<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit <%= product.name %> - Farm Fresh Market</title>
    <!-- Bootstrap 5 CSS (Lux theme from Bootswatch) -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/css/edit.css">
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <a href="/products/<%= product._id %>" class="btn btn-back mb-3">
                        <i class="fas fa-arrow-left me-2"></i>Back to Products
                    </a>
                    <h1 class="display-4 fw-bold mb-2">
                        <i class="fas fa-edit me-3"></i>Edit Product
                    </h1>
                    <p class="lead">Update "<%= product.name %>" information</p>
                </div>
                <div class="col-lg-4 text-end">
                    <i class="fas fa-pencil-alt" style="font-size: 6rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Form Container -->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="form-container">
                    <!-- Form Header -->
                    <div class="form-header">
                        <h2 class="fw-bold text-dark mb-2">
                            <i class="fas fa-shopping-basket text-primary me-2"></i>
                            Update Product Information
                        </h2>
                        <p class="text-muted mb-0">Modify the details for this product</p>
                    </div>

                    <!-- Current Product Info -->
                    <div class="current-info mb-4">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <div class="current-category">
                                    <% if(product.category === 'fruit') { %>
                                        <i class="fas fa-apple-alt fa-3x text-success mb-2"></i>
                                        <h6 class="text-success">Fruit</h6>
                                    <% } else if(product.category === 'vegetable') { %>
                                        <i class="fas fa-carrot fa-3x text-warning mb-2"></i>
                                        <h6 class="text-warning">Vegetable</h6>
                                    <% } else { %>
                                        <i class="fas fa-cheese fa-3x text-info mb-2"></i>
                                        <h6 class="text-info">Dairy</h6>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h4 class="fw-bold mb-1"><%= product.name %></h4>
                                <p class="text-primary fw-bold fs-5 mb-0">$<%= product.price.toFixed(2) %></p>
                                <small class="text-muted">Current product details</small>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Form -->
                    <form action="/products/<%= product._id %>?_method=PUT" method="POST" id="editForm">
                        <!-- Product Name -->
                        <div class="form-floating">
                            <input 
                                type="text" 
                                class="form-control" 
                                id="productName" 
                                name="name" 
                                placeholder="Product Name"
                                value="<%= product.name %>"
                                required
                                autocomplete="off"
                            >
                            <label for="productName">
                                <i class="fas fa-tag input-icon"></i>Product Name
                            </label>
                        </div>

                        <!-- Product Price -->
                        <div class="form-floating">
                            <input 
                                type="number" 
                                class="form-control" 
                                id="productPrice" 
                                name="price" 
                                placeholder="0.00"
                                value="<%= product.price %>"
                                step="0.01" 
                                min="0"
                                required
                                autocomplete="off"
                            >
                            <label for="productPrice">
                                <i class="fas fa-dollar-sign input-icon"></i>Price (USD)
                            </label>
                            <!-- Price Preview -->
                            <div class="price-preview" id="pricePreview">
                                <h5 class="mb-0">$<span id="priceDisplay"><%= product.price.toFixed(2) %></span></h5>
                                <small>Updated Price</small>
                            </div>
                        </div>

                        <!-- Product Category -->
                        <div class="form-floating">
                            <select class="form-select" id="productCategory" name="category" required>
                                <option value="fruit" <%= product.category === 'fruit' ? 'selected' : '' %>>üçé Fruit</option>
                                <option value="vegetable" <%= product.category === 'vegetable' ? 'selected' : '' %>>ü•ï Vegetable</option>
                                <option value="dairy" <%= product.category === 'dairy' ? 'selected' : '' %>>üßÄ Dairy</option>
                            </select>
                            <label for="productCategory">
                                <i class="fas fa-list input-icon"></i>Product Category
                            </label>
                            <!-- Category Preview -->
                            <div class="category-preview" id="categoryPreview">
                                <i class="fas fa-apple-alt fa-2x mb-2" id="categoryIcon"></i>
                                <h6 class="mb-0" id="categoryText">Updated Category</h6>
                            </div>
                        </div>

                        <!-- Change Summary -->
                        <div class="changes-summary" id="changesSummary" style="display: none;">
                            <h6 class="fw-bold mb-2">
                                <i class="fas fa-exclamation-circle text-warning me-2"></i>
                                Changes Detected
                            </h6>
                            <ul class="list-unstyled mb-0" id="changesList"></ul>
                        </div>

                        <!-- Form Actions -->
                        <div class="row mt-4">
                            <div class="col-md-6 mb-2">
                                <a href="/products/<%= product._id %>" class="btn btn-cancel w-100">
                                    <i class="fas fa-times me-2"></i>Cancel Changes
                                </a>
                            </div>
                            <div class="col-md-6 mb-2">
                                <button type="submit" class="btn btn-submit w-100">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>

                        <!-- Form Help Text -->
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Changes will be saved immediately upon submission.
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Updated Product Preview -->
        <div class="row justify-content-center mt-4" id="productPreview">
            <div class="col-lg-8 col-xl-6">
                <div class="card border-0 shadow-sm" style="border-radius: 20px;">
                    <div class="card-header bg-transparent border-0 text-center py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="fas fa-eye me-2"></i>Updated Product Preview
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-apple-alt fa-3x text-primary mb-2" id="previewIcon"></i>
                            <h4 class="fw-bold" id="previewName"><%= product.name %></h4>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="bg-light rounded p-2">
                                    <small class="text-muted">Price</small>
                                    <div class="fw-bold" id="previewPrice">$<%= product.price.toFixed(2) %></div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-light rounded p-2">
                                    <small class="text-muted">Category</small>
                                    <div class="fw-bold" id="previewCategory">
                                        <%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-seedling me-2"></i>Farm Fresh Market</h5>
                    <p class="text-muted">Your trusted source for fresh, organic produce</p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-muted mb-0">
                        <i class="fas fa-phone me-2"></i>Call us: (555) 123-4567
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Pass product data to JavaScript -->
    <script>
        window.productData = {
            name: '<%= product.name %>',
            price:'<%= product.price %>',
            category: '<%= product.category %>'
        };
    </script>

    <script src="/js/edit.js">
    </script>
</body>
</html>